<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="384px"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="384px"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="384px"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/gpg" />

            <TextView
                android:id="@+id/accounts_list"
                style="@style/print_sample_text"
                android:layout_gravity="center_horizontal"
                android:scaleY="1.5"
                android:text="تست امن افزار" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/trans_type_text"
                    style="@style/print_sample_text"
                    android:text="خرید" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/merchant_name_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="480031100" />

                <TextView
                    android:id="@+id/merchant_name_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:text=" شماره پایانه:" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/merchant_no_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="888888888888883" />

                <TextView
                    android:id="@+id/merchant_no_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/merchant_no_text"
                    android:text=" شماره پذیرنده:" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/terminal_no_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="00000295" />

                <TextView
                    android:id="@+id/terminal_no_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/terminal_no_text"
                    android:text="شماره کارت:" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/batch_no_text"
                    style="@style/print_sample_text"
                    android:text="000003" />

                <TextView
                    android:id="@+id/batch_no_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/batch_no_text"
                    android:text="شماره کارت:" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trace_no_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="000728" />

                <TextView
                    android:id="@+id/trace_no_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/trace_no_text"
                    android:text="شماره پیگری:" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_time_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="2017/06/21 11:10:26" />

                <TextView
                    android:id="@+id/date_time_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/date_time_text"
                    android:text="ساعت و تاریخ:" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amount_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="2000ریال" />

                <TextView
                    android:id="@+id/amount_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/amount_text"
                    android:text="مبلغ:" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hotel_address"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="مشهد، بلوار رضا، هتل جواد" />

                <TextView
                    android:id="@+id/hotel_address_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/hotel_address"
                    android:text="آدرس:" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/dynamic_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"></LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>