<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="384px"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="384px"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="384px"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/shahrdari" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/darkoob" />

            </LinearLayout>

            <TextView
                android:id="@+id/accounts_list"
                style="@style/print_sample_text"
                android:layout_gravity="center_horizontal"
                android:scaleY="1.5"
                android:text="دارکوب" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/trans_type_text"
                    style="@style/print_sample_text"
                    android:text="شرکت آسا سیستم یگانه " />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:text="محمدرضا" />

                <TextView
                    android:id="@+id/name_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:text="نام:" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/family_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="خواهانی" />

                <TextView
                    android:id="@+id/family_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/family_text"
                    android:text="نام خانوادگی:" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/codemelli_text"
                    style="@style/print_sample_text"
                    android:layout_alignBottom="@id/codemelli_text"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0dp"
                    android:text="1064030130" />

                <TextView
                    android:id="@+id/codemelli_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/codemelli_text"
                    android:text="کد ملی:" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:text="09398885961" />

                <TextView
                    android:id="@+id/mobile_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/mobile_text"
                    android:text="موبایل:" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trace_no_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="10168" />

                <TextView
                    android:id="@+id/trace_no_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/trace_no_text"
                    android:text="شماره پیگری:" />
            </RelativeLayout>

            <TextView
                style="@style/print_sample_text"
                android:layout_gravity="center"
                android:text="اطلاعات رزرو" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hotel_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="هتل آرمان" />

                <TextView
                    android:id="@+id/hotel_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/hotel_text"
                    android:text="هتل:" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/from_date_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:text="1397/12/01" />

                <TextView
                    android:id="@+id/from_date_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/from_date_text"
                    android:text="تاریخ ورود:" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/to_date_text"
                    style="@style/print_sample_text"
                    android:layout_alignParentStart="true"
                    android:text="1397/12/03" />

                <TextView
                    android:id="@+id/to_date_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/to_date_text"
                    android:text="تاریخ خروج:" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/room_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
                style="@style/print_sample_text"
                android:layout_gravity="center"
                android:text="اطلاعات هتل" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hotel_address_text"
                    style="@style/print_sample_text"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="end"
                    android:text="مشهد، بلوار امام رضا، هتل آرمان" />

                <TextView
                    android:id="@+id/hotel_address_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/hotel_address_text"
                    android:text="آدرس:" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hotel_phone_text"
                    style="@style/print_sample_text"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="start"
                    android:text="05133556688" />

                <TextView
                    android:id="@+id/hotel_phone_label"
                    style="@style/print_sample_text"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/hotel_phone_text"
                    android:layoutDirection="rtl"
                    android:text="تلفن:" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/hotel_isps_image"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/ipsp" />


            <LinearLayout
                android:id="@+id/dynamic_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"></LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>